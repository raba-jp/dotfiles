if [ -n "$BUFFER" ]; then
  zle accept-line
  return 0
fi
echo
echo -e "\e[0;33m--- list files ---\e[0m"
ls -alG
if [ "$(git rev-parse --is-inside-work-tree 2> /dev/null)" = 'true' ]; then
  echo
  echo -e "\e[0;33m--- git status ---\e[0m"
  git status --short --branch
  echo
fi
zle reset-prompt
return 0
