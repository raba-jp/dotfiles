// from the command palette.
[
  {
    "bindings": {
      "cmd-q": null,
      "cmd-h": null,
      "cmd-m": null,
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
      "cmd-k": "command_palette::Toggle",
      "cmd-g": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "cmd-.": "editor::ToggleCodeActions",
      "cmd-/": "editor::ToggleComments",
      "cmd-g cmd-g": "project_panel::ToggleFocus",
      "cmd-g cmd-d": "editor::GoToDefinition",
      "cmd-g cmd-r": "editor::FindAllReferences",
      "cmd-g cmd-c": "editor::GoToDeclaration"
      // "j k": ["workspace::SendKeystrokes", "escape"]
    }
  }
]
